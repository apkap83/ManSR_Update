                            <dxc:SimpleDiagram3D.Background>
                                <ImageBrush/>
                            </dxc:SimpleDiagram3D.Background>
                            <dxc:PieSeries3D x:Name="pieSeries2GUnavailableSites" DataSource="{Binding}"  LabelsVisibility="True"  
